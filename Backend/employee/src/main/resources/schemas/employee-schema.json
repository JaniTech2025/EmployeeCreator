{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Employee",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "firstName": { "type": "string" },
    "middleName": { "type": "string" },
    "lastName": { "type": "string" },
    "email": {
      "type": "string",
      "format": "email"
    },
    "mobileNumber": {
      "type": "string",
      "pattern": "^[0-9\\-\\+\\s()]*$"
    },
    "residentialAddress": { "type": "string" },
    "employeeStatus": { "type": "string" },
    "createdAt": {
      "type": "string",
      "format": "date"
    },
    "updatedAt": {
      "type": "string",
      "format": "date"
    },
    "photoUrl": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "contracts": {
      "type": "array",
      "items": {
        "$ref": "contract-schema.json"
      }
    }
  },
  "required": [
    "id",
    "firstName",
    "lastName",
    "email",
    "mobileNumber",
    "residentialAddress",
    "employeeStatus",
    "createdAt",
    "updatedAt",
    "contracts"
  ],
  "additionalProperties": false
}
